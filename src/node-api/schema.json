{
    "$schema": "http://json-schema.org/schema",
    "id": "NodeApi",
    "title": "Node API",
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "description": "The name of the generated Node API",
        "$default": {
          "$source": "argv",
          "index": 0
        }
      },
      "directory": {
        "description": "The directory in which to generate the Node API.",
        "type": "string",
        "default": false,
        "alias": "dir"
      }
    },
    "required": [
      "name"
    ]
  }
  
